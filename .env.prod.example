# =====================================================
# Variables de Entorno - Villex Production
# =====================================================
# IMPORTANTE: Copiar este archivo a .env.prod y completar los valores
# Uso: docker compose -f docker-compose.prod.yml --env-file .env.prod up -d

# =================================================
# PostgreSQL Database
# =================================================
POSTGRES_DB=villex_leads
POSTGRES_USER=villex_user
# IMPORTANTE: Cambiar por una contraseña segura!
POSTGRES_PASSWORD=CAMBIAR_CONTRASEÑA_SEGURA_AQUI

# =================================================
# Django Settings
# =================================================
# Generar con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=GENERAR_SECRET_KEY_AQUI_50_CARACTERES

# NUNCA poner True en producción
DEBUG=False

# Tu dominio (separar múltiples con coma)
ALLOWED_HOSTS=tudominio.com,www.tudominio.com

# =================================================
# CORS (Frontend URLs permitidas)
# =================================================
CORS_ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# =================================================
# Frontend Vite
# =================================================
# URL de la API desde el navegador (relativa al dominio)
VITE_API_URL=/api

# =================================================
# Integraciones (Calendly & WhatsApp)
# =================================================
CALENDLY_BASE_URL=https://calendly.com/tu-usuario/30min
WHATSAPP_PHONE=5491123456789
WHATSAPP_TEMPLATE=¡Hola! Soy {name}. Me interesa {project_type}. {message}

# =================================================
# Seguridad
# =================================================
# Cambiar por un string aleatorio largo
IP_HASH_SECRET=GENERAR_STRING_ALEATORIO_LARGO_AQUI
